      "type": "object",
      "properties": {
        "detections": {
          "type": "array",
          "items": [
            {
              "type": "array",
              "items": [
                {
                  "type": "object",
                  "properties": {
                    "confidence": {
                      "type": "number"
                    },
                    "language": {
                      "type": "string"
                    },
                    "isReliable": {
                      "type": "boolean"
                    }
